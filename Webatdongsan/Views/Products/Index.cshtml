    @model IEnumerable<Webatdongsan.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master1.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN PRODUCTS</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new
        {
            @class = "btn btn - primary"
        })
    </p>
    <table class="table">
        <tr>
            <th>
                TÊN DỰ ÁN
            </th>

            <th>
                MÔ TẢ
            </th>
            <th>
                GIÁ
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                DIỆN TÍCH
            </th>
            <th>
                HÌNH
            </th>
            <th>
                LIÊN HỆ
            </th>
            <th>
                NGÀY ĐĂNG 
            </th>
            <th>
                CATEGORY
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            if(item.IdNguoiDung == ViewBag.UserID)
            { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecriptionPro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LienHe)  @*//them*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDang)  @*//them*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>
                    item.Category1.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new
                    {
                        id =
                    item.ProductID
                    }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new
                    {
                        id =
                    item.ProductID
                    }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new
                    {
                        id =
                    item.ProductID
                    }, new { @class = "btn btn-danger" })
                   

                </td>
            </tr>
        }
            }
    </table>
</div>

