@model Webatdongsan.Models.Products

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h3 style="text-align:center">BẠN CÓ CHẮC CHẮN MUỐN XÓA SẢN PHẨM NÀY?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                TÊN SẢN PHẨM
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NamePro)
            </dd>
            <dt>
                MÔ TẢ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DecriptionPro)
            </dd>

            <dt>
                ĐỊA CHỈ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                DIỆN TÍCH
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Area)
            </dd>

            <dt>
                LIÊN HỆ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LienHe)
            </dd>

            <dt>
                NGÀY ĐĂNG
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayDang)
            </dd>

            <dt>
                GIÁ
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                HÌNH ẢNH
            </dt>
            <dd>
                <img src="~/Images/@Model.ImagePro" />
            </dd>
            <dt>
                NHÓM SẢN PHẨM
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category1.NameCate)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("TRỞ LẠI", "Index")
            </div>
        }
    </div>
</div>