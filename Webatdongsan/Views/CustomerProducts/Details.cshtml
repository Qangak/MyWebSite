
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/HomeView.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .product-details-container {
        margin: 20px auto;
        width: 90%;
    }

    .product-image {
        width: 100%;
        height: 300px;
        border-radius: 5px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
    }

    .product-title {
        font-size: 24px;
        font-weight: bold;
        margin-top: 15px;
    }

    .product-description {
        font-size: 16px;
        text-align: justify;
        margin-top: 10px;
    }

    .product-price {
        font-size: 24px;
        color: red;
        font-weight: bold;
        margin-top: 10px;
    }

    .product-info {
        font-size: 16px;
        text-align: justify;
        margin-top: 10px;
    }

    .btn-add-to-favorite {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 18px;
        font-weight: bold;
    }

        .btn-add-to-favorite:hover {
            background-color: #0056b3;
        }
</style>

<div class="product-details-container">
    <h2 style="text-align: center; margin-bottom: 20px;">CHI TIẾT</h2>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <img class="product-image" src="~/Images/@Model.ImagePro" alt="@Model.ImagePro">
        </div>
        <div class="col-md-4">
            <img class="product-image" src="~/Images/@Model.ImagePro1" alt="@Model.ImagePro1">
        </div>
        <div class="col-md-4">
            <img class="product-image" src="~/Images/@Model.ImagePro2" alt="@Model.ImagePro2">
        </div>
        <div class="col-md-8">
            <h4 class="product-title">@Model.NamePro</h4>
            <p class="product-description">
                <span style="font-weight: bold">Mô tả:</span> @Model.DecriptionPro
            </p>
            <p class="product-price">Giá bán: @Model.Price VNĐ</p>
            <p class="product-info">
                <span style="font-weight: bold">Địa chỉ:</span> @Model.Address
            </p>
            <p class="product-info">
                <span style="font-weight: bold">Diện tích:</span> @Model.Area /m2
            </p>
            <p class="product-info">
                <span style="font-weight: bold">Liên hệ:</span> @Model.LienHe
            </p>
            <p class="product-info">
                <span style="font-weight: bold">Ngày đăng:</span> @Model.NgayDang
            </p>
            <a class="btn-add-to-favorite" href="@Url.Action("Add", "YeuThich", new { id = Model.ProductID })">
                Thêm vào yêu thích
            </a>
        </div>
    </div>
</div>


