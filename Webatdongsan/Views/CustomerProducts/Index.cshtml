<style>
    .product-card {
        border: 1px solid #ccc;
        border-radius: 3%;
        text-align: center;
        margin: 20px;
        padding: 10px;
        background-color: #f9f9f9;
    }

    .product-image {
        margin-top: 5px;
        width: 350px;
        height: 280px;
    }

    .product-details {
        text-align: left;
        margin: 5px 10px;
        padding: 10px;
        background-color: #fafafa;
    }

    .product-title {
        font-size: 18px;
        font-weight: bold;
    }

    .product-price {
        font-size: 16px;
    }

    .product-address {
        font-style: italic;
    }

    .product-link {
        display: inline-block;
        margin-top: 10px;
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
    }

        .product-link:hover {
            background-color: #0056b3;
        }
</style>
